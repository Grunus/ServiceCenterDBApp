<UserControl
    x:Class="WPFApp.Views.Payments.UpdatePaymentsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:WPFApp.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Views.Payments"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel>
        <Grid Margin="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Оновити платіж" />
            <ComboBox
                Grid.Row="1"
                Width="200"
                Margin="0,5,0,0"
                DisplayMemberPath="PaymentId"
                ItemsSource="{Binding Payments}"
                SelectedItem="{Binding SelectedPayment}" />
            <components:FormInput
                Title="ID замовлення:"
                Grid.Row="2"
                IsActive="{Binding PaymentIsSelected}"
                Text="{Binding OrderId}" />
            <components:FormInput
                Title="Сума:"
                Grid.Row="3"
                IsActive="{Binding PaymentIsSelected}"
                Text="{Binding Amount}" />
            <Button
                Grid.Row="4"
                Width="125"
                Height="25"
                Command="{Binding ResetCommand}"
                Content="Скинути"
                Style="{DynamicResource RoundedButton}" />
            <Button
                Grid.Row="5"
                Width="125"
                Height="25"
                Margin="0,5,0,0"
                Command="{Binding UpdatePaymentCommand}"
                Content="Оновити"
                Style="{DynamicResource RoundedButton}" />
            <Button
                Grid.Row="6"
                Width="125"
                Height="25"
                Margin="0,5,0,0"
                Command="{Binding ReturnCommand}"
                Content="Повернутися"
                Style="{DynamicResource RoundedButton}" />
        </Grid>
    </StackPanel>
</UserControl>
