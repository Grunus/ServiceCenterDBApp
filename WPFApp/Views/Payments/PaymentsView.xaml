<UserControl
    x:Class="WPFApp.Views.Payments.PaymentsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:WPFApp.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Views.Payments"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button
                    Width="125"
                    Height="25"
                    Margin="0,5,10,5"
                    Command="{Binding NavigateAddPaymentsCommand}"
                    Content="Додати"
                    Style="{DynamicResource RoundedButton}" />
                <Button
                    Width="125"
                    Height="25"
                    Margin="0,5,10,5"
                    Command="{Binding NavigateUpdatePaymentsCommand}"
                    Content="Редагувати"
                    Style="{DynamicResource RoundedButton}" />
                <Button
                    Width="125"
                    Height="25"
                    Margin="0,5,10,5"
                    Command="{Binding NavigateDeletePaymentsCommand}"
                    Content="Видалити"
                    Style="{DynamicResource RoundedButton}" />
            </StackPanel>
            <components:FormInput
                Title="Пошук платежів:"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Text="{Binding PaymentsFilter}" />
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Margin="0,5,0,5"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Сортування:" />
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangePaymentsSortPropertyNameCommand}"
                        CommandParameter=""
                        Content="Без сортування"
                        IsChecked="True" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangePaymentsSortPropertyNameCommand}"
                        CommandParameter="PaymentId"
                        Content="ID платежу" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangePaymentsSortPropertyNameCommand}"
                        CommandParameter="OrderId"
                        Content="ID замовлення" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangePaymentsSortPropertyNameCommand}"
                        CommandParameter="Amount"
                        Content="Сума" />
                </StackPanel>
                <CheckBox
                    Grid.Row="2"
                    Margin="0,5,0,5"
                    VerticalContentAlignment="Center"
                    Content="За спаданням"
                    FontSize="14"
                    IsChecked="{Binding IsPaymentsSortDescending}" />
            </Grid>
        </Grid>
        <ListView
            Grid.Row="1"
            Width="auto"
            Margin="0,10,0,0"
            BorderThickness="0"
            ItemsSource="{Binding PaymentsCollectionView}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="BorderBrush" Value="LightBlue" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn>
                        <GridViewColumnHeader Content="ID платежу" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding PaymentId}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="ID замовлення" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding OrderId}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Сума" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding Amount}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
