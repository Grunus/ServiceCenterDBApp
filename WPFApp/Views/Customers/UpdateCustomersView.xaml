<UserControl
    x:Class="WPFApp.Views.Customers.UpdateCustomersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:WPFApp.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Views.Customers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel>
        <Grid Margin="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Оновити клієнта" />
            <ComboBox
                Grid.Row="1"
                Width="200"
                Margin="0,5,0,0"
                DisplayMemberPath="CustomerId"
                ItemsSource="{Binding Customers}"
                SelectedItem="{Binding SelectedCustomer}" />
            <components:FormInput
                Title="Прізвище:"
                Grid.Row="2"
                IsActive="{Binding CustomerIsSelected}"
                Text="{Binding LastName}" />
            <components:FormInput
                Title="Ім'я:"
                Grid.Row="3"
                IsActive="{Binding CustomerIsSelected}"
                Text="{Binding FirstName}" />
            <components:FormInput
                Title="По батькові:"
                Grid.Row="4"
                IsActive="{Binding CustomerIsSelected}"
                Text="{Binding MiddleName}" />
            <components:FormInput
                Title="Номер телефону:"
                Grid.Row="5"
                IsActive="{Binding CustomerIsSelected}"
                Text="{Binding PhoneNumber}" />
            <components:FormInput
                Title="Електронна пошта:"
                Grid.Row="6"
                IsActive="{Binding CustomerIsSelected}"
                Text="{Binding Email}" />
            <Button
                Grid.Row="7"
                Width="125"
                Height="25"
                Command="{Binding ResetCommand}"
                Content="Скинути"
                Style="{DynamicResource RoundedButton}" />
            <Button
                Grid.Row="8"
                Width="125"
                Height="25"
                Margin="0,5,0,0"
                Command="{Binding UpdateCustomerCommand}"
                Content="Оновити"
                Style="{DynamicResource RoundedButton}" />
            <Button
                Grid.Row="9"
                Width="125"
                Height="25"
                Margin="0,5,0,0"
                Command="{Binding ReturnCommand}"
                Content="Повернутися"
                Style="{DynamicResource RoundedButton}" />
        </Grid>
    </StackPanel>
</UserControl>
