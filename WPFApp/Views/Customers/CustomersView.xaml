<UserControl
    x:Class="WPFApp.Views.Customers.CustomersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:WPFApp.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Views.Customers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button
                    Width="125"
                    Height="25"
                    Margin="0,5,10,5"
                    Command="{Binding NavigateAddCustomersCommand}"
                    Content="Додати"
                    Style="{DynamicResource RoundedButton}" />
                <Button
                    Width="125"
                    Height="25"
                    Margin="0,5,10,5"
                    Command="{Binding NavigateUpdateCustomersCommand}"
                    Content="Редагувати"
                    Style="{DynamicResource RoundedButton}" />
                <Button
                    Width="125"
                    Height="25"
                    Margin="0,5,10,5"
                    Command="{Binding NavigateDeleteCustomersCommand}"
                    Content="Видалити"
                    Style="{DynamicResource RoundedButton}" />
            </StackPanel>
            <components:FormInput
                Title="Пошук клієнтів:"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Text="{Binding CustomersFilter}" />
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,5,0,5"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Сортування:" />
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeCustomersSortPropertyNameCommand}"
                        CommandParameter=""
                        Content="Без сортування"
                        IsChecked="True" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeCustomersSortPropertyNameCommand}"
                        CommandParameter="CustomerId"
                        Content="ID клієнта" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeCustomersSortPropertyNameCommand}"
                        CommandParameter="LastName"
                        Content="Прізвище" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeCustomersSortPropertyNameCommand}"
                        CommandParameter="FirstName"
                        Content="Ім'я" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeCustomersSortPropertyNameCommand}"
                        CommandParameter="MiddleName"
                        Content="По батькові" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeCustomersSortPropertyNameCommand}"
                        CommandParameter="PhoneNumber"
                        Content="Номер телефону" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeCustomersSortPropertyNameCommand}"
                        CommandParameter="Email"
                        Content="Електронна пошта" />
                </StackPanel>
                <CheckBox
                    Grid.Row="2"
                    Margin="0,5,0,5"
                    VerticalContentAlignment="Center"
                    Content="За спаданням"
                    FontSize="14"
                    IsChecked="{Binding IsCustomersSortDescending}" />
            </Grid>
        </Grid>
        <ListView
            Grid.Row="1"
            Width="auto"
            Margin="0,10,0,0"
            BorderThickness="0"
            ItemsSource="{Binding CustomersCollectionView}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="BorderBrush" Value="LightBlue" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn>
                        <GridViewColumnHeader Content="ID клієнта" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding CustomerId}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Прізвище" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding LastName}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Ім'я" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding FirstName}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="По батькові" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding MiddleName}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Номер телефону" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding PhoneNumber}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Електронна пошта" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding Email}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
