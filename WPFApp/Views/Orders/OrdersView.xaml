<UserControl
    x:Class="WPFApp.Views.Orders.OrdersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:WPFApp.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Views.Orders"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button
                    Width="125"
                    Height="25"
                    Margin="0,5,10,5"
                    Command="{Binding NavigateAddOrdersCommand}"
                    Content="Додати"
                    Style="{DynamicResource RoundedButton}" />
                <Button
                    Width="125"
                    Height="25"
                    Margin="0,5,10,5"
                    Command="{Binding NavigateUpdateOrdersCommand}"
                    Content="Редагувати"
                    Style="{DynamicResource RoundedButton}" />
                <Button
                    Width="125"
                    Height="25"
                    Margin="0,5,10,5"
                    Command="{Binding NavigateDeleteOrdersCommand}"
                    Content="Видалити"
                    Style="{DynamicResource RoundedButton}" />
            </StackPanel>
            <components:FormInput
                Title="Пошук замовлень:"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Text="{Binding OrdersFilter}" />
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Margin="0,5,0,5"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Сортування:" />
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter=""
                        Content="Без сортування"
                        IsChecked="True" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter="OrderId"
                        Content="ID замовлення" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter="CustomerId"
                        Content="ID клієнта" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter="ServiceTypeId"
                        Content="ID послуги" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter="EmployeeId"
                        Content="ID працівника" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter="Description"
                        Content="Опис" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter="Price"
                        Content="Ціна" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter="Status"
                        Content="Статус" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter="PlacedAt"
                        Content="Дата замовлення" />
                    <RadioButton
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Command="{Binding ChangeOrdersSortPropertyNameCommand}"
                        CommandParameter="DueBy"
                        Content="Дата закінчення" />
                </StackPanel>
                <CheckBox
                    Grid.Row="2"
                    Margin="0,5,0,5"
                    VerticalContentAlignment="Center"
                    Content="За спаданням"
                    FontSize="14"
                    IsChecked="{Binding IsOrdersSortDescending}" />
            </Grid>
        </Grid>
        <ListView
            Grid.Row="1"
            Width="auto"
            Margin="0,10,0,0"
            BorderThickness="0"
            ItemsSource="{Binding OrdersCollectionView}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="BorderBrush" Value="LightBlue" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn>
                        <GridViewColumnHeader Content="ID замовлення" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding OrderId}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="ID клієнта" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding CustomerId}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="ID послуги" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding ServiceTypeId}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="ID працівника" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding EmployeeId}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Опис" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Ціна" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding Price}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Статус" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding Status, Converter={StaticResource EnumToStringConverter}}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Дата замовлення" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding PlacedAt}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn>
                        <GridViewColumnHeader Content="Дата закінчення" IsHitTestVisible="False" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    MaxWidth="250"
                                    Padding="10"
                                    Text="{Binding DueBy}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
